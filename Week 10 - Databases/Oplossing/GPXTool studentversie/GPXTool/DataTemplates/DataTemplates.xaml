<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GPXTool.DataTemplates">

    <Style TargetType="ComboBoxItem" x:Key="dfltcboi">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
    </Style>
    <Style TargetType="ListBoxItem" x:Key="dfltlsti">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
    </Style>
    
    <DataTemplate x:Key="dtTrkPt">
        <Grid>
            <TextBlock Text="{Binding Tekst}" />
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="dtTrk">
        <Grid>
            <TextBlock Text="{Binding Title}" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>
